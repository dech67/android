<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,SmallSp,ContentDescription,RtlSymmetry"
    tools:context=".customer_report.ViewCustomerReport">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Please allocate your vehicle and insert following details"
                android:textColor="@color/offwhite"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:baselineAligned="false">

                <FrameLayout
                    android:id="@+id/frame_bike"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@color/chart_deep_red">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:background="@color/chart_deep_red" />

                    <ImageView
                        android:id="@+id/bike_image"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/tvbike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Bike"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_car"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/car_image"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/tvcar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Car"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:background="@color/chart_deep_red" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/frame_rect_02"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="8dp"
                    android:text="Customer Report Checkup"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/frame_rect_02"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="8dp"
                    android:text="Customer Report Count"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="Head Rest"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="Floor Mats"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv_vheadrest"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/customer_rprt_bt01"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_vfloormats"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_margin="4dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:background="@drawable/customer_rprt_bt01"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="00"
                        android:textAllCaps="false"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="Mud Flap"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="Seat Cover"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv_vmudflap"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_margin="4dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:background="@drawable/customer_rprt_bt01"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="00"
                        android:textAllCaps="false"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_vseatcover"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_margin="4dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:background="@drawable/customer_rprt_bt01"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="00"
                        android:textAllCaps="false"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:text="Other Report"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_votherReport"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/frame_rect_02"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Something Other Report..."
                android:padding="8dp"
                android:textSize="12sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/frame_rect_02">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="8dp"
                    android:text="Battery Info"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_vBattery"
                    android:layout_width="match_parent"
                    android:text="Oxide"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="72dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/gradient_bottom"
                    android:scaleY=".5" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/frame_rect_02"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvDocument"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="8dp"
                    android:text="Bike Document"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    style="?buttonBarStyle"
                    android:weightSum="3">
                    <Button
                        android:id="@+id/bt_vrc"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/customer_rprt_bt01"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Rc"
                        style="?buttonBarButtonStyle"
                        android:textAllCaps="false"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_vpuc"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        style="?buttonBarButtonStyle"
                        android:background="@drawable/customer_rprt_bt01"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Puc"
                        android:textAllCaps="false"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_vinsurance"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        style="?buttonBarButtonStyle"
                        android:background="@drawable/customer_rprt_bt01"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Insurance"
                        android:textAllCaps="false"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    style="?buttonBarStyle"
                    android:weightSum="3">
                    <Button
                        android:id="@+id/bt_vroadtax"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/customer_rprt_bt01"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Road tax"
                        style="?buttonBarButtonStyle"
                        android:textAllCaps="false"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_vpassengertax"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/customer_rprt_bt01"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Passenger tax"
                        style="?buttonBarButtonStyle"
                        android:textAllCaps="false"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_vpollutionpaper"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        style="?buttonBarButtonStyle"
                        android:background="@drawable/customer_rprt_bt01"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Pollution Paper"
                        android:textAllCaps="false"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat_medium"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:text="Vehicle interior picture"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_viewimagedocument"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/frame_rect_02" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/frame_rect_02"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="8dp"
                    android:text="@string/petrol_diesel_meter"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="56dp"
                    android:orientation="horizontal"
                    android:weightSum="6">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="E"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="20%"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="40%"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="60%"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="80%"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="F"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="52dp"
                    android:layout_marginEnd="56dp">
                    <SeekBar
                        android:id="@+id/sb_vfuelmeter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:clickable="false"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:progress="0" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/frame_rect_02"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="8dp"
                    android:text="Odometer"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/tv_vodometer"
                        android:layout_width="match_parent"
                        android:text="5000"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginEnd="48dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp"
                        android:text="Kms"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/gradient_bottom"
                        android:scaleY=".5" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/frame_rect_02"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="8dp"
                    android:text="Signature"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/frame_sqr">
                    <ImageView
                        android:id="@+id/image_vsign"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_svg" />
                </FrameLayout>

            </LinearLayout>

            <Button
                android:id="@+id/bt_vdone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/done_red_button"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#000000"
        android:layout_gravity="center"/>

</FrameLayout>